<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="app.uocssafe.com.uocs_safe.Report_Activity.report_form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Categories: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/categoryName"
                android:textSize="24dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:id="@+id/title_view"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/categoryName"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:ems="10"
                android:id="@+id/editTitle"
                android:hint="Enter title"
                android:textAlignment="viewStart"
                android:layout_below="@+id/title_view"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:text="Description "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:id="@+id/desc_view"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/editTitle"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:ems="10"
                android:hint="Enter description"
                android:textAlignment="viewStart"
                android:layout_below="@+id/desc_view"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:id="@+id/description" />

            <Button
                android:text="Select Picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginTop="16dp"
                android:id="@+id/selectPicture" />

            <HorizontalScrollView
                android:id="@+id/imageSelected"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:scrollbars="none"
                android:layout_height="150dp"
                android:layout_below="@+id/selectPicture">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/llImage"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_menu_gallery"
                        android:maxHeight="200dp"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:id="@+id/img_post"/>
                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:text="Location"
                android:id="@+id/edLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageSelected"/>

            <TextView
                android:id="@+id/selectedLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edLocation"
                android:text="Current Location: "/>

            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectedLocation"
                android:layout_marginTop="25dp"
                android:id="@+id/upload" />
        </RelativeLayout>

        </ScrollView>


    </RelativeLayout>


</LinearLayout>
